# =============================================================================
# AIMagna ETL Agent - Environment Configuration
# =============================================================================
# Copy this file to .env and update with your values:
#   cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# GCP Configuration
# -----------------------------------------------------------------------------
GCP_PROJECT_ID="your-project-id"
GCP_REGION="us-central1"

# BigQuery Configuration
BIGQUERY_DATASET="commercial_lending"

# Google Cloud Storage
GCS_BUCKET="your-bucket-name"

# Vertex AI (optional - for embeddings)
VERTEX_AI_INDEX_ENDPOINT_ID=""

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
# Option 1: Use gcloud auth (recommended for development)
#   Run: gcloud auth application-default login
#   No GOOGLE_APPLICATION_CREDENTIALS needed!

# Option 2: Service Account Key (for CI/CD or production)
# GOOGLE_APPLICATION_CREDENTIALS="/path/to/service-account-key.json"

# -----------------------------------------------------------------------------
# API Server Configuration
# -----------------------------------------------------------------------------
API_HOST="0.0.0.0"
API_PORT=8000
CORS_ORIGINS="http://localhost:5173,http://localhost:5174,http://localhost:3000"

# -----------------------------------------------------------------------------
# Firestore Collections
# -----------------------------------------------------------------------------
FIRESTORE_COLLECTION_RUNS="workflow_runs"
FIRESTORE_COLLECTION_HITL="hitl_approvals"

# -----------------------------------------------------------------------------
# WebSocket Configuration
# -----------------------------------------------------------------------------
WS_HEARTBEAT_INTERVAL=30
WS_TIMEOUT=300

# -----------------------------------------------------------------------------
# Natural Language Query Settings
# -----------------------------------------------------------------------------
MAX_QUERY_RESULTS=1000
QUERY_TIMEOUT_SECONDS=30

# -----------------------------------------------------------------------------
# HITL (Human-in-the-Loop) Configuration
# -----------------------------------------------------------------------------
# Enable/disable human approval for low-confidence mappings
# Set to "true" to enable HITL approval workflow
# Set to "false" to auto-approve all mappings
ENABLE_HITL=true

# Confidence threshold for auto-approval (0.0 - 1.0)
# Mappings with confidence >= this threshold are auto-approved
# Mappings with confidence < this threshold require human approval
# Default: 0.95 (95%)
HITL_CONFIDENCE_THRESHOLD=0.95

# -----------------------------------------------------------------------------
# Dataset Configuration
# -----------------------------------------------------------------------------
# Set to "true" to create a new BigQuery dataset for each run
# Set to "false" to use the same dataset for all runs (recommended)
CREATE_DATASET_PER_RUN=false
